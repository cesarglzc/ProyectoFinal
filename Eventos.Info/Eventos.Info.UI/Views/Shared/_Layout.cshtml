<!DOCTYPE html>
<html lang="es">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Mi aplicación ASP.NET MVC</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href='http://fonts.googleapis.com/css?family=Istok+Web|Maven+Pro' rel='stylesheet' type='text/css'>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/carousel")
        @Styles.Render("~/Content/mainStyle")        
    </head>
    <body>
        <header>
            <!--Content Wrapper-->
            <div id="navigationBar" class="navbar navbar-default" role="navigation">
                <div class="float-left">
                    <p class="site-title">
                        <a href="@Url.Action("Index", "Home")"><img src="~/Content/images/logo.png" /></a>
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
                <ul id="menuItems" class="nav navbar-nav">
                @if (!Request.IsAuthenticated) {
                
                   <li>@Html.ActionLink("Eventos", "Eventos", "Home")</li>
                   <li>@Html.ActionLink("Organizadores", "Organizadores", "Home")</li>
                   <li>@Html.ActionLink("Contacto", "Contacto", "Home")</li>
                
                }else{
                    <li>@Html.ActionLink("Mis Eventos", "Index", "Evento")</li>
                    <li>@Html.ActionLink("Modificar Cuenta", "Edit", "Organizador")</li>
                    
                }
                    </ul>
            </div>
        </header>
        <div id="body">
            <div class="row">
                <div class="col-xs-12 col-md-12">
                    @RenderSection("featured", required: false)
                    <div>
                        @RenderBody()
                    </div>
                 </div>
            </div>
        </div>
        <div id="footer" class="navbar navbar-default">
            <div id="disclaimer" class="float-left">
                <p>&copy; @DateTime.Now.Year - Eventos.com Todos los derechos reservados</p>
             </div>
            <div id="social">
                 <ul>
                    <li>
                       <a href="http://ww.facebook.com" target="_blank"><img src="~/Content/images/facebook.png" /></a>
                    </li>
                    <li>
                       <a href="http://www.twitter.com" target="_blank"><img src="~/Content/images/twitter.png" /></a>
                    </li>
                 </ul>
            </div>
        </div>

        <script src ="http://code.jquery.com/jquery-1.10.2.min.js"></script>
        @Scripts.Render("~/bundles/bootstrapmin")
        @RenderSection("scripts", required: false)

    </body>
</html>
