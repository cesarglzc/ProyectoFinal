@model Eventos.Info.UI.Models.Organizador

@{
    ViewBag.Title = "Edit";
}


 <div class="row">
     <div class="col-md-2">
      </div>
     <div class="col-md-8">

<h2>Edit</h2>



@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Organizador</legend>

        @Html.HiddenFor(model => model.OrganizadorId)


        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, new {@class="col-sm-2 label-control" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nombre, new {@class="form-control" })                        
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Usuario, new {@class="col-sm-2 label-control" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Usuario, new {@class="form-control" })                        
                @Html.ValidationMessageFor(model => model.Usuario)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Correo, new {@class="col-sm-2 label-control" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Correo, new {@class="form-control" })                        
                @Html.ValidationMessageFor(model => model.Correo)
            </div>
        </div>



        <center>
            <p>
                <input type="submit" value="Save" class="btn btn-success"  />
                @Html.ActionLink("Cancelar", "Index","Evento")
            </p>
        </center>

    </fieldset>
}

            </div>
     
     <div class="col-md-2">
      </div>
     </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
