@model IEnumerable<Eventos.Info.UI.Models.Evento>

@{
    ViewBag.Title = "Index";
}

<div class="row">
     <div class="col-md-2">
      </div>
     <div class="col-md-8">


<h2>Próximos Eventos</h2>

<div id="tabContent">
    <table class="table table-striped">
    <tr>
        <th>
            Organizador
        </th>
        <th>
            Categoría
        </th>
        <th>
            Evento
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Organizador.Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Categoria1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lugar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.ActionLink("Ver más", "Details", new { id=item.EventoId }, new { @class = "btn btn-warning" }) 
        </td>
    </tr>
}

</table>
</div>

         </div>

     <div class="col-md-2">
      </div>
    </div>

