@model Eventos.Info.UI.Models.Evento

@{
    ViewBag.Title = "Edit";
}


 <div class="row">
     <div class="col-md-2">
      </div>
     <div class="col-md-8">

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Evento", FormMethod.Post, new {@class="form-horizontal"}))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Evento</legend>

        @Html.HiddenFor(model => model.EventoId)

        

                <div class="form-group">
                    @Html.LabelFor(model => model.CategoriaId, "Categoria", new {@class="col-sm-2 label-control" })
                    <div class="col-sm-10">
                        @Html.DropDownList("CategoriaId", null, new {@class="form-control" })
                        @Html.ValidationMessageFor(model => model.CategoriaId)
                    </div>
                </div>


                  <div class="form-group">
                    @Html.LabelFor(model => model.Nombre, new {@class="col-sm-2 label-control" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Nombre, new {@class="form-control" })                        
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                  </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Fecha, new {@class="col-sm-2 label-control" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Fecha, new {@class="form-control" })                        
                        @Html.ValidationMessageFor(model => model.Fecha)
                    </div>
                  </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Lugar, new {@class="col-sm-2 label-control" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Lugar, new {@class="form-control" })                        
                        @Html.ValidationMessageFor(model => model.Lugar)
                    </div>
                  </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Hora, new {@class="col-sm-2 label-control" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Hora, new {@class="form-control" })                        
                        @Html.ValidationMessageFor(model => model.Hora)
                    </div>
                  </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Precio, new {@class="col-sm-2 label-control" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Precio, new {@class="form-control" })                        
                        @Html.ValidationMessageFor(model => model.Precio)
                    </div>
                  </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.Descripcion, new {@class="col-sm-2 label-control" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Descripcion, new {@class="form-control" })                        
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                  </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.PosterUrl, new {@class="col-sm-2 label-control" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.PosterUrl, new {@class="form-control" })                        
                        @Html.ValidationMessageFor(model => model.PosterUrl)
                    </div>
                  </div>

        <center>
            <p>
            <input type="submit" class="btn btn-success" value="Save" />@Html.ActionLink("Cancelar", "Index")

            </p>
        </center>
    </fieldset>
}


         </div>
     
     <div class="col-md-2">
      </div>
     </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
